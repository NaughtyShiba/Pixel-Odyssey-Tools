{
	"extends": "@repo/typescript-config/next.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
